<!DOCTYPE html>
<style>
div.cloth-box {
  position: fixed;
  width: 100%;
  height: 100%;
  padding-top: 66px;
  z-index: 90;
}

div.cloth-box img {
  height: 100%;
  width: 100%;
}

div.gallery {
  height: 100%;
}

div.gallery div.tag {
  position: relative;
  width: 40%;
  height: 5%;
  background-color: rgba(0, 51, 51, 1);

  color: white;
  top: 80%;
  left: 60%;

  text-align: center;
}

</style>

<div class="cloth-box">
  <img src="/img/upDownShadow.png">
</div>

  {{#each clothList}}
  <div class="gallery" style="background-image:url({{imagine}})">
    <div class="tag">
      <p> {{index}}</p>
    </div>
  </div>
  {{/each}}


